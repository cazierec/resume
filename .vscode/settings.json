{
    "runOnSave.commands": [
        {
            "match": ".*resume.json",
            "command": "cd ${fileDirname}; hackmyresume build ${file} TO out/spartan/resume.all -t node_modules/jsonresume-theme-spartan",
            "runIn": "backend"
        },
        {
            "match": ".*resume.json",
            "command": "cd ${fileDirname}; hackmyresume build ${file} TO out/stack/resume.all -t node_modules/jsonresume-theme-stackoverflow",
            "runIn": "backend"
        }
    ],
    "editor.wordWrap": "on",
}